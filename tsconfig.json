{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "declaration": true,
      "declarationMap": true,
      "outDir": "build",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "exclude": ["tests", "node_modules", "build", "coverage"]
  }
  